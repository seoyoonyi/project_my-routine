import { Button } from "antd";
import { useRef } from "react";

interface IBtnProps {
  className?: string;
  onClick?: () => void;
  type?: "text" | "link" | "ghost" | "primary" | "dashed";
  size?: "large";
  htmlType?: "submit";
  children: React.ReactNode;
}

const Btn = ({
  className,
  onClick,
  type,
  children,
  size,
  htmlType,
}: IBtnProps) => {
  const BtnRef = useRef(null);
  // if (type !== null) {
  //   className;
  // }
  return (
    <Button
      // ref="BtnRef"
      className={className}
      onClick={onClick}
      type={type}
      size={size}
      htmlType={htmlType}
    >
      {children}
    </Button>
  );
};

export default Btn;
